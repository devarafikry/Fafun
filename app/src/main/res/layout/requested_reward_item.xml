<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

   <android.support.v7.widget.CardView
       android:layout_margin="5dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:scaleType="centerCrop"
               android:id="@+id/reward_image"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               tools:src="@drawable/boy2"/>
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/reward_name"
                       tools:text="Test Nama Reward"
                       android:padding="10dp"
                       android:layout_width="wrap_content"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:id="@+id/reward_date"
                       tools:text="Diajukan tanggal 10 Oktober 2018"
                       android:padding="10dp"
                       android:layout_width="wrap_content"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"/>

               </LinearLayout>

               <TextView
                   android:textStyle="bold"
                   android:gravity="right"
                   android:id="@+id/reward_point"
                   tools:text="9000 Point"
                   android:padding="10dp"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"/>

           </LinearLayout>
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <Button
                   android:id="@+id/btn_complete_reward"
                   android:backgroundTint="@color/colorAccent"
                   android:textColor="@android:color/white"
                   android:layout_gravity="right"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Selesaikan Permintaan Reward"/>
           </LinearLayout>
       </LinearLayout>
   </android.support.v7.widget.CardView>
</LinearLayout>