<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/uploading_fragment_padding"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.LoginActivity">

    <ProgressBar
        android:padding="@dimen/uploading_fragment_content_padding"
        android:id="@+id/progress_bar_upload"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/progress_bar_shop_image_size"
        android:layout_height="@dimen/progress_bar_shop_image_size" />
    <TextView
        android:padding="@dimen/uploading_fragment_content_padding"
        android:layout_gravity="center_vertical"
        android:id="@+id/upload_data_display"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_data"/>

</LinearLayout>
